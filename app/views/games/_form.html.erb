<% if user_signed_in? %>
  <%= form_for(@game) do |f| %>
    <% if @game.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

        <ul>
        <% @game.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container">
      <div class="row collapse">
        <div class="large-12 columns">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="row collapse">
        <div class="large-12 columns">
          <%= f.label :num_players %>
          <%= f.select :num_players, Game::NUM_PLAYERS %>
        </div>
      </div>
      <div class="row collapse">
        <div class="large-12 columns">
          <%= f.label :player1 %>
          <%= f.text_field :player1, :value => current_user.email, :disabled => true %>
        </div>
      </div>
      <div class="row collapse">
        <div class="large-12 columns">
          <%= f.label :player2 %>
          <%= f.text_field :player2 %>
        </div>
      </div>
      <div class="row collapse">
        <div class="large-12 columns">
          <%= f.label :player3 %>
          <%= f.text_field :player3 %>
        </div>
      </div>
      <div class="row collapse">
        <div class="large-12 columns">
          <%= f.label :player4 %>
          <%= f.text_field :player4 %>
        </div>
      </div>
      <div class="row">
          <%= f.submit class: 'radius button expand' %>
      </div>
    </div>
  <% end %>
<% end %>

<% if !user_signed_in? %>
  Please <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Login", new_user_session_path %>
  <p>
<% end %>
